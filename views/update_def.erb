<h2>Definition: <%= @definition.meaning %></h2>
<h3>Word: <%= @definition.word.name %></h3>

<form action="/homepage/<%= @definition.word.id %>/definitions/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="new_def">Rewrite definition</label>
  <input id="new_def" name="new_def" type="text">

  <button type="submit">Update definition</button>
</form>

<%# delete def %>
<form action="/homepage/<%= @definition.word.id %>/definitions/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete definition</button>
</form>

<a href="/homepage/<%= @definition.word.id %>">Back to <%= @definition.word.name %></a>